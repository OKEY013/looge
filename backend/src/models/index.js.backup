const { Sequelize } = require('sequelize');
// 允许使用 .env 配置数据库连接，未提供时使用现有默认值，便于宝塔中快速切换
const DB_NAME = process.env.DB_NAME || 'looge_db';
const DB_USER = process.env.DB_USER || 'looge_ybao888';
const DB_PASS = process.env.DB_PASS || 'aa135789';
const DB_HOST = process.env.DB_HOST || 'localhost';
const DB_DIALECT = process.env.DB_DIALECT || 'mysql';

const sequelize = new Sequelize(DB_NAME, DB_USER, DB_PASS, {
  host: DB_HOST,
  dialect: DB_DIALECT,
  logging: false,
});

module.exports = { sequelize };
